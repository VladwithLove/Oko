<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Menu.AddSubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/menu_name"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logodog"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:src="@drawable/logo_dog"
            android:transitionName="logodog" />

        <TextView
            android:id="@+id/shopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addSubject"
            android:textColor="@color/mainLight"
            android:textSize="30sp"
            android:textStyle="bold"
            android:transitionName="shopText" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/subjectL"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColorHint="@color/hintColor"
        app:errorTextColor="@color/red"
        app:hintTextColor="@color/hintColor"
        app:startIconDrawable="@drawable/email_icon">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/subjectE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/lightBack"
            android:hint="@string/subject"
            android:textColor="@color/black"
            android:textColorHint="#546E7A" />
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/roundedbutton"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/white"
        android:transitionName="signIn" />

</LinearLayout>